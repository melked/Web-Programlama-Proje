@model KuaforUygulamasi.Models.RandevuViewModel

<h2>Randevuyu Sil</h2>

<p>ID: @Model.ID</p>
<p>Kullanıcı: @Model.Kullanici?.Ad</p>
<p>Çalışan: @Model.Calisan?.Ad</p>
<p>İşlem: @Model.Islem?.Ad</p>
<p>Saat: @Model.Saat.ToString("g")</p>
<p>Durum: @Model.Durum</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="ID" value="@Model.ID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Randevu")" class="btn btn-secondary">İptal</a>
</form>
