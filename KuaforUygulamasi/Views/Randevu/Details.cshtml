@model KuaforUygulamasi.Models.Randevu

<h2>Randevu Detayları</h2>

<p><strong>ID:</strong> @Model.ID</p>
<p><strong>Kullanıcı:</strong> @Model.Kullanici?.Ad</p>
<p><strong>Çalışan:</strong> @Model.Calisan?.Ad</p>
<p><strong>İşlem:</strong> @Model.Islem?.Ad</p>
<p><strong>Saat:</strong> @Model.Saat.ToString("g")</p>
<p><strong>Durum:</strong> @Model.Durum</p>

<a href="@Url.Action("Index", "Randevu")" class="btn btn-secondary">Geri</a>
