@model KuaforUygulamasi.Models.Randevu

<h2>Yeni Randevu Oluştur</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="KullaniciID">Kullanıcı</label>
        <input type="number" id="KullaniciID" name="KullaniciID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CalisanID">Çalışan</label>
        <input type="number" id="CalisanID" name="CalisanID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IslemID">İşlem</label>
        <input type="number" id="IslemID" name="IslemID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Saat">Saat</label>
        <input type="datetime-local" id="Saat" name="Saat" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Durum">Durum</label>
        <input type="text" id="Durum" name="Durum" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a href="@Url.Action("Index", "Randevu")" class="btn btn-secondary">Geri</a>
