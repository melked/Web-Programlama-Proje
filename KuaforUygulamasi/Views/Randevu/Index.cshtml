@model IEnumerable<KuaforUygulamasi.Models.Randevu>

<h2>Randevu Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı</th>
            <th>Çalışan</th>
            <th>İşlem</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.ID</td>
                <td>@randevu.Kullanici?.Ad</td>
                <td>@randevu.Calisan?.Ad</td>
                <td>@randevu.Islem?.Ad</td>
                <td>@randevu.Saat.ToString("g")</td>
                <td>@randevu.Durum</td>
                <td>
                    <a href="@Url.Action("Details", "Randevu", new { id = randevu.ID })">Detay</a> |
                    <a href="@Url.Action("Edit", "Randevu", new { id = randevu.ID })">Düzenle</a> |
                    <a href="@Url.Action("Delete", "Randevu", new { id = randevu.ID })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Randevu")" class="btn btn-primary">Yeni Randevu Ekle</a>
