@model IEnumerable<KuaforUygulamasi.Models.Randevu>

<h2>Randevu Listesi</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Müşteri</th>
            <th>Çalışan</th>
            <th>İşlem</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.ID</td>
                <td>@randevu.Kullanici?.UserName</td>
                <td>@randevu.Calisan?.Ad @randevu.Calisan?.Soyad</td>
                <td>@randevu.Islem?.Ad</td>
                <td>@randevu.Saat.ToLocalTime()</td>
                <td>@randevu.Durum</td>
                <td>
                    <a asp-action="Details" asp-route-id="@randevu.ID">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@randevu.ID">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@randevu.ID">Sil</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Randevu Ekle</a>
