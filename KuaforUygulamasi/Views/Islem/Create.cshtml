@model KuaforUygulamasi.Models.Islem

@{
    ViewData["Title"] = "Yeni İşlem Ekle";
}

<h2>Yeni İşlem Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Sure"></label>
        <input asp-for="Sure" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Ucret"></label>
        <input asp-for="Ucret" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Ekle</button>
</form>
