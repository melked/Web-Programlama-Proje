@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
    </div>
    <div class="form-group">
        <label for="sifre">Password</label>
        <input type="password" id="sifre" name="sifre" class="form-control" placeholder="Enter your password" required />
    </div>
    <div class="form-group">
        <label for="ad">First Name</label>
        <input type="text" id="ad" name="ad" class="form-control" placeholder="Enter your first name" required />
    </div>
    <div class="form-group">
        <label for="soyad">Last Name</label>
        <input type="text" id="soyad" name="soyad" class="form-control" placeholder="Enter your last name" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>
